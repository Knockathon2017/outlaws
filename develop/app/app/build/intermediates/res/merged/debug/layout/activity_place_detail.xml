<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include
        android:id="@+id/verify_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/layout_select_dest_actionar"/>


    <ImageView
        android:id="@+id/imv_place_detail"
        android:layout_width="match_parent"
        android:layout_below="@+id/verify_actionbar"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:scaleType="fitXY"
        android:layout_height="150dp"/>

    <TextView
        android:id="@+id/tv_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imv_place_detail"
        android:minLines="3"
        android:ellipsize="end"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:maxLines="4"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lv_guide_list"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/tv_detail"
        android:layout_above="@+id/btn_done_main"
        android:layout_marginEnd="@dimen/margin_10dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_height="match_parent"/>

    <Button
        android:id="@+id/btn_done_main"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="GUIDE ME"
        android:textColor="@color/white"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:background="@color/blue_usher"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/margin_10dp"/>

    <ProgressBar
        android:id="@+id/pb_verify"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="18dp"
        android:visibility="gone" />

</RelativeLayout>