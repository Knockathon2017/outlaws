<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include
        android:id="@+id/verify_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/layout_action_guide_detail"/>

    <RelativeLayout
        android:id="@+id/rl_main"
        android:layout_width="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/verify_actionbar"
        android:layout_marginTop="@dimen/margin_20dp"
        android:layout_marginBottom="20dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/imv_guideimage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/guide_place_holder"/>

        <LinearLayout
            android:id="@+id/llmain"
            android:layout_toEndOf="@+id/imv_guideimage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginStart="@dimen/margin_10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_16sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Adhish Aggarwal"/>

            <RatingBar
                android:id="@+id/ratingbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                style="?android:attr/ratingBarStyleSmall"
                android:rating="4" />

            <TextView
                android:id="@+id/feedback"
                android:layout_width="wrap_content"
                android:textSize="@dimen/text_16sp"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10dp"
                android:text="29 FeedBack"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/address_header"
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_16sp"
        android:ellipsize="end"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_main"
        android:layout_marginTop="@dimen/margin_10dp"
        android:text="Address"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_16sp"
        android:ellipsize="end"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/address_header"
        android:maxLines="2"
        android:layout_marginTop="@dimen/margin_10dp"
        android:text="F-2/367 Sanket New Delhi"/>

    <TextView
        android:id="@+id/contact_header"
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_16sp"
        android:textColor="@color/blue_usher"
        android:ellipsize="end"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_marginTop="30dp"
        android:text="Contact"/>

    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_16sp"
        android:ellipsize="end"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/contact_header"
        android:maxLines="2"
        android:layout_marginTop="@dimen/margin_10dp"
        android:text="9953783655"/>

    <TextView
        android:id="@+id/reviews_header"
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_16sp"
        android:textColor="@color/blue_usher"
        android:ellipsize="end"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact"
        android:layout_marginTop="30dp"
        android:text="FeedBack"/>

    <ImageView
        android:id="@+id/arrow"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_next_arrow"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact"
        android:layout_marginTop="30dp"
        android:text="FeedBack"/>

    <TextView
        android:id="@+id/reviews"
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_16sp"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/reviews_header"
        android:maxLines="2"
        android:visibility="gone"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="@dimen/margin_10dp"
        android:text="A Very Lovable Person"/>

    <RatingBar
        android:id="@+id/ratingbar_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:layout_below="@id/reviews"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:visibility="gone"
        style="?android:attr/ratingBarStyleSmall"
        android:rating="4" />

    <Button
        android:id="@+id/btn_done_main"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="GUIDE ME"
        android:textColor="@color/white"
        android:paddingStart="40dp"
        android:paddingEnd="40dp"
        android:background="@color/blue_usher"
        android:layout_marginTop="@dimen/margin_20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
