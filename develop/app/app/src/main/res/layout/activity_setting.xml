<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <include
        android:id="@+id/verify_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/layout_action_settings"/>

    <TextView
        android:id="@+id/address_header"
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_16sp"
        android:ellipsize="end"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verify_actionbar"
        android:layout_marginTop="@dimen/margin_20dp"
        android:text="Availability"/>

    <CheckBox
        android:id="@+id/is_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verify_actionbar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="55dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_16sp"
        android:ellipsize="end"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/address_header"
        android:maxLines="2"
        android:layout_marginTop="@dimen/margin_20dp"
        android:text="Privacy Policy"/>

    <TextView
        android:id="@+id/contact_us"
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_16sp"
        android:ellipsize="end"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/address"
        android:maxLines="2"
        android:layout_marginTop="@dimen/margin_10dp"
        android:text="Contact us"/>

    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_16sp"
        android:textColor="@color/blue_usher"
        android:ellipsize="end"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="50dp"
        android:text="LOGOUT"/>

    <ProgressBar
        android:id="@+id/pb_login"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="18dp"
        android:visibility="gone" />

</RelativeLayout>